# This is Git's per-user configuration file.
[user]
  # Please adapt and uncomment the following lines:
  name = {{ .name | quote }}
  email = {{ .email | quote }}
  username = {{ .username | quote }}

[pretty]
  better-oneline = "format:%C(auto)%h%d %s %Cblue[%dn]"

[diff]
  tool = nvimdiff

[alias]

  # Begin emoji-log aliases
  # NEW.
  new = "!f() { git commit -m \"ğŸ†• NEW: $@\"; }; f"
  # IMPROVE.
  imp = "!f() { git commit -m \"ğŸ‘Œ IMPROVE: $@\"; }; f"
  # FIX.
  fix = "!f() { git commit -m \"ğŸ FIX: $@\"; }; f"
  # RELEASE.
  rel = "!f() { git commit -m \"ğŸš€ RELEASE: $@\"; }; f"
  # DOC.
  doc = "!f() { git commit -m \"ğŸ“– DOC: $@\"; }; f"
  # TEST.
  tst = "!f() { git commit -m \"âœ… TEST: $@\"; }; f"
  # End emoji-log aliases

  # Some git worktree aliases
  wt = worktree
  wta = worktree add
  wtl = worktree list
  wtlock = worktree lock
  wtm = worktree move
  wtp = worktree prune
  wtr = worktree remove
  wtrepair = worktree repair
  wtu = worktree unlock
  # End git worktree aliases

[core]
  editor = nvim

[merge]
  tool = nvimdiff

[push]
  default = current

[init]
  defaultBranch = main

[help]
  autocorrect = 1

[include]
  path = ~/.gitalias.txt

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[commit]
  template = /home/dabrown/.gitmessage.txt
